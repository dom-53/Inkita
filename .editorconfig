# .editorconfig - Universal code style configuration
# Documentation: https://editorconfig.org/
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Kotlin source files
[*.{kt,kts}]
indent_size = 4
indent_style = space

# Allow PascalCase for Composable functions (Jetpack Compose convention)
ktlint_function_naming_ignore_when_annotated_with = Composable, Test

# Allow wildcard imports (common in Android/Compose projects)
ktlint_standard_no-wildcard-imports = disabled

# Max line length (optional, disable if you prefer no limit)
max_line_length = 180

# XML files (layouts, manifests, resources)
[*.xml]
indent_size = 4
indent_style = space

# JSON files
[*.json]
indent_size = 2
indent_style = space

# Markdown - preserve trailing spaces (needed for line breaks)
[*.md]
trim_trailing_whitespace = false

# Gradle files
[*.gradle]
indent_size = 4
indent_style = space